<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Minor WOT</title>
<link href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow" rel="stylesheet">
<style>
  body {
    position: relative;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    overflow-y: hidden;
    font-family: 'PT Sans Narrow', sans-serif;
    color: #fff;
    background: linear-gradient(to right, #446fce 0%, #608cef 50%, #ef6060 50%, #ce4444 100%);
  }
  body::before, body::after {
    position: absolute;
    top: 50%;
    left: 50%;
    opacity: 0;
    transform: translate(-50%, -50%);
    transition: opacity .3s ease;
  }
  body::before {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
    max-width: 100%;
    content: "â¤µ";
    color: rgba(255, 255, 255, .25);
    font-size: 16em;
    background: linear-gradient(#7944f9, #a884ff);
  }
  body::after {
    width: 75%;
    font-size: 1.6em;
    text-align: center;
    content: "Switch orientation, please.";
    text-shadow: 0 .05em 0 rgba(0, 0, 0, 0.5);
    z-index: 1;
  }
  body.p1-win {
    background: none;
    animation: win-back-p1 1s infinite alternate;
  }
  body.p1-win .p1 {
    animation: win-text 1s infinite alternate;
  }
  body.p2-win {
    background: none;
    animation: win-back-p2 1s infinite alternate;
  }
  body.p2-win .p2 {
    animation: win-text 1s infinite alternate;
  }
  h1 {
    margin-bottom: .4em;
    padding: .25em 0;
    font-weight: normal;
    text-align: center;
    background-color: rgba(0, 0, 0, .5);
  }
  div {
    display: flex;
    justify-content: center;
  }
  div::after {
    position: absolute;
    top: 2.6em;
    left: 50%;
    content: "-";
    font-size: 3em;
    transform: translateX(-50%);
  }
  span {
    position: relative;
    margin: 0 .4em;
    padding: .4em .6em;
    font-size: 5em;
    text-shadow: 0 .03em 0 rgba(0, 0, 0, .5);
    border: 1px solid #fff;
  }
  span::before {
    position: absolute;
    top: .25em;
    font-size: .25em;
    width: 100%;
    text-align: center;
    text-shadow: none;
    left: 0;
  }
  span.p1::before {
    content: "Team 1";
  }
  span.p2::before {
    content: "Team 2";
  }
  @media (orientation: portrait) {
    body {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    body::before, body::after {
      opacity: 1;
    }
    div {
      display: none;
    }
  }
  @keyframes win-text {
  	20% {
  		color: #00ff99;
  	}
  	40% {
  		color: #fff35c;
  	}
  	60% {
  		color: #ff6666;
  	}
  	80% {
  		color: #00ccff;
  	}
  	100% {
  		color: #7d7fe8;
  	}
  }
  @keyframes win-back-p1 {
  	0% {
  		background-color: #294d9c;
  	}
  	50% {
  		background-color: #446fce;
  	}
  	100% {
  		background-color: #819ede;
  	}
  }
  @keyframes win-back-p2 {
  	0% {
  		background-color: #9c2929;
  	}
  	50% {
  		background-color: #ce4444;
  	}
  	100% {
  		background-color: #de8181;
  	}
  }
</style>
<body class="">
<h1>Scores</h1>
<div>
  <% Object.keys(scores).forEach(id => { %>
    <span data-id="<%= id %>"><%= scores[id] %></span>
  <% }); %>
</div>
<script>
  var ws = new WebSocket('ws://localhost:3000');

  ws.addEventListener('open', function(event) {
    console.log('Socket connected');
  });

  ws.addEventListener('message', function(event) {
    var message = JSON.parse(event.data);
    if (message.type === 'color' && !document.querySelector('[data-id="' + message.id + '"]')) {
      document.querySelector('div').innerHTML += '<span data-id="' + message.id + '">0</span>';
    } else if (message.type === 'score-update') {
      document.querySelector('[data-id="' + message.id + '"]').innerHTML = message.score;
    }
  });
</script>
</body>
