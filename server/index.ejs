<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Minor WOT</title>
<style>
  @font-face {
    font-family: 'pixel';
    src: url('pixel.woff2') format('woff2'),
         url('pixel.woff') format('woff');
    font-weight: normal;
    font-style: normal;
  }

  @keyframes wave {
    from {
      transform: translateY(0);
      color: blue;
    }
    to {
      transform: translateY(-35px);
    }
  }

  @keyframes pulsateRight {
    from {
      transform: scale(1) rotate(0);
      opacity: 0.5;
    }

    to {
      transform: scale(1.2) rotate(10deg);
      opacity: 1;
    }
  }

  @keyframes pulsateLeft {
    from {
      transform: scale(1) rotate(0);
      opacity: 0.5;
    }

    to {
      transform: scale(1.2) rotate(-10deg);
      opacity: 1;
    }
  }

  #logo {
    padding-top: 12em;
    width: 35em;
    margin: 0 auto;
    position: relative;
  }

  #logo img {
    display: block;
    position: absolute;
    bottom: 8em;
    z-index: -1;
    filter: drop-shadow(4px 4px 0 rgba(0, 0, 0, 0.5));
  }

  #logo img:first-of-type {
    left: 25%;
    animation: pulsateLeft 1s .3s infinite alternate;
  }

  #logo img:last-of-type {
    right: 25%;
    animation: pulsateRight 1s infinite alternate;
  }

  #logo h1 {
    letter-spacing: -16px;
    text-align: center;
  }

  #logo span {
    display: inline-block;
    animation-duration: 0.3s;
    animation-name: wave;
    animation-iteration-count: infinite;
    animation-direction: alternate;
  }

  #logo span:nth-child(1) {
    animation-delay: -0.7s;
    color: #780a8c;
  }

  #logo span:nth-child(2) {
    animation-delay: -0.6s;
    color: #8c0a7d;
  }

  #logo span:nth-child(3) {
    animation-delay: -0.5s;
    color: #a00a6e;
  }

  #logo span:nth-child(4) {
    animation-delay: -0.4s;
    color: #b40a96;
  }

  #logo span:nth-child(5) {
    animation-delay: -0.3s;
    color: #b40a96;
  }



  h1 {
    font-family: 'pixel', cursive;
    font-size: 4em;
  }
</style>
<div id="logo">
  <img src="/berend.png" />
  <h1>
    <span>l</span>
    <span>u</span>
    <span>a</span>
    <span>u</span>
    <span>s</span>
  </h1>
  <img src="/rijk.png" />
</div>

